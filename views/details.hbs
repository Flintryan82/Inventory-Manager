        <main>
            <h1>{{name}}</h1>
            {{!-- <img class="cube" src="{{imageURL}}"> --}}
            <div class="details">
                <p><span>Description:</span>{{description}}</p>
                <p><span>Difficulty level:</span> {{difficulty}}</p>
                <a class="btn" href="/">Back</a>
            <a class="btn" href="/attach/type/{{_id}}">Attatch Accessory</a>
            </div>
            <h2>Accessories</h2>
            <div class="types">
                {{#each types}}
                <div class="{{imageURL}}" alt="{{name}}">
                    <h3>{{name}}</h3>
                    <p>{{description}}</p>
                </div>
                {{else}}
           
                <h3 class="italic">This cube has no accessories yet...</h3>
                {{/each}}
            </div>
        </main>


